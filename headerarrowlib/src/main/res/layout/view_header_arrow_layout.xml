<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/llay_root"
    android:orientation="vertical"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <LinearLayout
        android:id="@+id/llay_header"
        android:orientation="horizontal"
        android:background="@android:color/holo_blue_dark"
        android:paddingLeft="@dimen/size_medium"
        android:paddingRight="@dimen/size_medium"
        android:layout_width="match_parent"
        android:layout_height="@dimen/header_height">
        <ImageView
            android:id="@+id/img_left"
            android:clickable="true"
            android:layout_width="@dimen/icon_width"
            android:layout_height="match_parent"/>
        <LinearLayout
            android:id="@+id/llay_title_container"
            android:clickable="true"
            android:layout_weight="1"
            android:layout_width="0dp"
            android:layout_gravity="center"
            android:gravity="center"
            android:layout_height="wrap_content">
            <TextView
                android:id="@+id/tv_title"
                android:text=""
                android:textColor="@android:color/white"
                android:clickable="true"
                android:layout_gravity="center"
                android:gravity="center"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"/>
        </LinearLayout>
        <ImageView
            android:clickable="true"
            android:id="@+id/img_right"
            android:layout_width="@dimen/icon_width"
            android:layout_height="match_parent"/>

    </LinearLayout>

    <ScrollView
        android:fillViewport="true"
        android:id="@+id/scrll_content"
        android:layout_width="match_parent"
        android:layout_height="match_parent">
        <LinearLayout
            android:orientation="vertical"
            android:id="@+id/llay_content"
            android:padding="@dimen/size_medium"
            android:background="@android:color/holo_orange_light"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"/>
    </ScrollView>
</LinearLayout>
